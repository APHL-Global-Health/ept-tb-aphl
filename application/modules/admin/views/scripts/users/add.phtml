<script type="text/javascript">
	var duplicated = false;
    function checkDuplicate(tableName,fieldName,obj,fnct,msg)
    {
        $.post("<?php echo $this->url(array('module' => 'default', 'controller' => 'common', 'action' => 'check-duplicate')); ?>", { tableName: tableName,fieldName : fieldName ,value : obj.value,fnct : fnct, format: "html" },
        function(data){
            if(data>0)
            {
                alert(msg,"err");
                duplicated=false;
				obj.focus();
            }
            else{
                duplicated=true;
            }
        });
    }
	
    function validateNow(){
		checkDuplicate('users','UserID',$("#userId"),null,'This email already exists as a primary email for another user. Please choose another email.')
        flag = deforayValidator.init({
            formId: 'addUserForm'
        });
        if(flag && !duplicated){
            $.blockUI();
            document.getElementById('addUserForm').submit();
        }
    }	    
</script>